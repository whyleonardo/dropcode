{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "globalPassThroughEnv": ["VERCEL_URL", "NODE_ENV", "SKIP_ENV_VALIDATION"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "passThroughEnv": ["DATABASE_URL", "DIRECT_URL"]
    },

    "db:push": {},
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "lint:spell": {},
    "clean": {
      "cache": false
    }
  }
}
