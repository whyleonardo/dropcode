{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": ["^build", "^db:migrate:deploy"],
      "outputs": [".next/**", "!.next/cache/**"],
      "passThroughEnv": [
        "ANALYZE",
        "DATABASE_URL",
        "AUTH_GITHUB_ID",
        "AUTH_GITHUB_SECRET",
        "AUTH_GITLAB_ID",
        "AUTH_GITLAB_SECRET",
        "AUTH_SECRET",
        "UPSTASH_REDIS_URL",
        "UPSTASH_REDIS_TOKEN"
      ]
    }
  }
}
